#version 450 core

//layout (location = 0) in vec3 position;
//layout (location = 1) in vec3 color;

out VS_GS_VERTEX{
out vec3 pos1;
out vec3 pos2;
out mat4 vp;
} vs_out;

uniform vec3 pos1;
uniform vec3 pos2;
uniform mat4 vp;

void main(){

	gl_Position= vp*vec4(pos1, 1.0f);
	vs_out.pos1 = pos1;
	vs_out.pos2 = pos2;
	vs_out.vp = vp;

}